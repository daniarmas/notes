# Types models
#############################################

type Note {
	id: ID!
	userId: ID!
	title: String
	content: String
	files: [File]
  createTime: String!
  updateTime: String
}

type File {
	id: ID! 
	noteId: ID!
	originalFile: String!
	processedFile: String
	url: String!
  createTime: String!
  updateTime: String
}

type AccessToken {
  id: ID!
  userId: ID!
  refreshTokenId: ID!
  createTime: String!
  updateTime: String
}

type RefreshToken {
  id: ID!
  userId: ID!
  createTime: String!
  updateTime: String
}

type User {
	id: ID!
	name: String!
	email: String!
	createTime: String!
	updateTime: String
}

# Types responses
#############################################

type SignInResponse {
  user: User!
  accessToken: String!
  refreshToken: String!
}

type NotesResponse {
  notes: [Note]
  cursor: String!
}

# Inputs
#############################################

input SignInInput {
  email: String!
  password: String!
}

input NotesInput {
  cursor: String
  trash: Boolean
}

# Queries and Mutations
#############################################

type Mutation {
  signIn(input: SignInInput!): SignInResponse!
  signOut: Boolean!
}

type Query {
  me: User!
  listNotes(input: NotesInput): NotesResponse!
}
